    "recipeIngredient": [
        {
            "name": "木綿豆腐（又は絹豆腐）",
            "quantity": "１丁（350～400g）"
        },
        {
            "name": "大根",
            "quantity": "5cm"
        },
        {
            "name": "ポン酢",
            "quantity": "大さじ3"
        },
        {
            "name": "片栗粉",
            "quantity": "大さじ5"
        },
        {
